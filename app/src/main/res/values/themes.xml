<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="Theme.ColorPicker" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_jeans</item>
        <item name="colorPrimaryVariant">@color/rich_electric_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_jeans</item>
        <item name="colorSecondaryVariant">@color/rich_electric_blue</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="basicIconColor">@color/icon_color</item>
        <item name="basicTextColor">@color/black</item>
        <item name="GrayTextColor">@color/dim_gray</item>
        <item name="fullBlurColor">@color/full_blur_color</item>
        <item name="halfBlurColor">@color/half_blur_color</item>
        <item name="cardBackgroundColor">@color/card_background_color</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="iconSize">50dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="navigationIconTint">?attr/basicIconColor</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ColorDetails.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="singleLine">true</item>
        <item name="android:textColor">?attr/GrayTextColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ColorDetails.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_round_button</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_copy</item>
        <item name="android:contentDescription">@string/copy_icon</item>
        <item name="android:tint">@color/rich_electric_blue</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

</resources>