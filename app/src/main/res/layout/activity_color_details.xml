<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ColorDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/color_details_toolbar"
        style="@style/Toolbar.TitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/arrow_back_24"
        app:title="Color Details" />

    <androidx.cardview.widget.CardView
        android:id="@+id/show_card_color_id"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hex Color Layout -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/hex_color_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="#FF0000" />

                <ImageButton
                    android:id="@+id/hex_color_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- RGB Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/rgb_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="RGB (255, 0, 0)" />

                <ImageButton
                    android:id="@+id/rgb_copy_ib_id"
                    style="@style/ColorDetails.ImageButton"

                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- CMYK Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/cmyk_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="CMYK" />

                <ImageButton
                    android:id="@+id/cmyk_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- Binary Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/binary_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="Binary" />

                <ImageButton
                    android:id="@+id/binary_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- HSL Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/hsl_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="HSL" />

                <ImageButton
                    android:id="@+id/hsl_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- HSV/HSB Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/hsv_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="HSV" />

                <ImageButton
                    android:id="@+id/hsv_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- LAB Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/lab_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="LAB" />

                <ImageButton
                    android:id="@+id/lab_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />

            <!-- XYZ Layout-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="2dp">

                <TextView
                    android:id="@+id/xyz_tv_id"
                    style="@style/ColorDetails.TextView"
                    android:text="XYZ" />

                <ImageButton
                    android:id="@+id/xyz_copy_ib_id"
                    style="@style/ColorDetails.ImageButton" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="16dp"
                android:background="@color/light_black" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
